server {
    listen $PORT default_server;

    location /static {
        alias /vol/static;
    }

    location /logs {
        error_log /var/log/nginx/logs.error.log debug;
    }

    location / {
        uwsgi_read_timeout 40000;
        uwsgi_connect_timeout 40000;
        uwsgi_send_timeout 40000;
        uwsgi_pass netmanga.herokuapp.com:$PORT;
        include /etc/nginx/uwsgi_params;

        uwsgi_buffer_size 32k;
        uwsgi_buffers 8 32k;
        
    }
}
