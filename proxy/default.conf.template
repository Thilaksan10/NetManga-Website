server {
    listen $PORT default_server;

    location /static {
        alias /vol/static;
    }

    location / {
        uwsgi_set_header HOST $host;
        uwsgi_pass netmanga.com:$PORT;
        uwsgi_set_header X-Forwarded-HOST $server_name;
        uwsgi_set_header X-REAL_IP $remote_addr;
        uwsgi_buffer_size 32k;
        uwsgi_buffers 8 32k;
        
        include /etc/nginx/uwsgi_params;
        uwsgi_read_timeout 300;
        proxy_read_timeout 300;
    }
}
